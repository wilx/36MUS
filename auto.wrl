# Postranice trakare
PROTO PostraniceTrakare [] {
    Transform {
        scale 0.5 0.5 0.5
        children [
            Shape {
                appearance Appearance {
                    material Material {
                        diffuseColor .11 .208 .11
                        specularColor .298 .298 .298
                        emissiveColor .11 .208 .11
                        ambientIntensity 0
                        shininess .1
                    }
                }
                geometry Extrusion {
                    spine [
                        -.5 0 0, -.4 1 0, .4 1 0, .5 0 0, -.5 0 0
                    ]
                    scale [
                        1.3 1.3, .9 .9, .9 .9, 1.3 1.3, 1.3 1.3
                    ]
                    crossSection [
                        -.31 .3, -.08 0, -.09 0, -.32 .3, -.31 .3
                    ]
                }
            }
        ]
    }
}


PROTO DnoTrakare [] {
    Transform {
        children [
            Shape {
                geometry Box {
                    size 0.5 0.5 0.01
                }
                appearance Appearance {
                    material Material {
                        diffuseColor .11 .208 .11
                        specularColor .298 .298 .298
                        emissiveColor .11 .208 .11
                        ambientIntensity 0
                        shininess .1
                    }
                }
            }
        ]
    }
}


PROTO VanaTrakare [] {
    Transform {
        rotation 1 0 0 -1.574
        translation 0 0.25 0
        scale 1.25 1.25 1.25
        children [
            PostraniceTrakare {}
            Transform {
                translation 0 0.270 -0.16
                scale 0.385 0.55 1
                rotation 1 0 0 0.22359
                children [ DnoTrakare {} ]
            }
        ]
    }
}


Group {
    children [
        Transform {
            rotation 0 1 0 3.141592
            children [VanaTrakare {}]
        }
        Transform {
            rotation 0 1 0 0.1
            translation 0.04 0 -0.05
            children [Tyc {}]
        }
        Transform {
            rotation 0 1 0 -0.1
            translation -0.04 0 -0.05
            children [Tyc {}]
        }
    ]
}
