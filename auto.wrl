# Postranice trakare
PROTO PostraniceTrakare [] {
    Transform {
        scale 0.5 0.5 0.5
        children [
            Shape {
                appearance Appearance {
                    material Material {
                        diffuseColor .11 .208 .11
                        specularColor .298 .298 .298
                        emissiveColor .11 .208 .11
                        ambientIntensity 0
                        shininess .1
                    }
                }
                geometry Extrusion {
                    spine [
                        -.5 0 0, -.5 1 0, .5 1 0, .5 0 0, -.5 0 0
                    ]
                    scale [
                        1 1, .9 .9, .9 .9, 1 1, 1 1
                    ]
                    crossSection [
                        -.31 .3, -.08 0, -.09 0, -.32 .3, -.31 .3
                    ]
                }
            }
        ]
    }
}


PROTO DnoTrakare [] {
    Transform {
        children [
            Shape {
                geometry Box {
                    size 0.5 0.5 0.01
                }
                appearance Appearance {
                    material Material {
                        diffuseColor .11 .208 .11
                        specularColor .298 .298 .298
                        emissiveColor .11 .208 .11
                        ambientIntensity 0
                        shininess .1
                    }
                }
            }
        ]
    }
}


Transform {
    children [
        PostraniceTrakare {}
        Transform {
            translation 0 0.255 -0.1425
            scale 0.583 0.583 1
            rotation 1 0 0 0.035
            children [ DnoTrakare {} ]
        }
    ]
}