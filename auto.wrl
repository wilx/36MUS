#VRML V2.0 utf8

Background {
	groundColor	0.1 0.9 0.1
	skyColor 0.3 0.3 1
}

NavigationInfo {
    avatarSize 1.86
    headlight TRUE
}

PointLight {
	intensity 1
	color 0.9 0.1 0.1
	location 0 10 0

}

PROTO Osa [
	field SFRotation rotation 0 0 0	0
	field SFColor color 1 0 0
]
{
	Group {
		children [
			Transform {
				rotation IS	rotation
				children [
                    # Osa.
					Shape {
						geometry Cylinder {
							radius 0.25
							height 20
						}
						appearance Appearance {
							material Material {
								emissiveColor IS color
                                transparency 0.2
							}
						}    
                    }
                    # Koukle na konci.
			        Transform {
				        translation	0 10 0
				        children [
					        Shape {
						        geometry Sphere	{
							        radius 0.3
						        }
						        appearance Appearance {
							        material Material {
								        emissiveColor IS color
                                        transparency 0.2
							        }
						        }
					        }
				        ]
			        }
				]	
			}
		]
	}
}


