Background {
	groundColor	0.1 0.9 0.1
	skyColor 0.3 0.3 1
}

PointLight {
	intensity 1
	color 0.9 0.1 0.1
	location 0 10 0

}

Transform {
	translation	-2 0 0
	children [
		Shape {
			geometry Extrusion {
				crossSection [-0.02 0, 0 0.02, 0.02 0, 0 -0.02]
				spine [0 0 0, 0 0.4 0, 0 0.8 -0.3, 0 1.8 -0.4]
				beginCap TRUE
				endCap TRUE
				solid TRUE
			}
		}
	]
}

